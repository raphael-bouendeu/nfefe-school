<div class="row">
  <div class="col m6 offset-m3 center">
    <h5>Sign up</h5>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'layouts/devisemes' %>
      <div class="input-field">
        <%= f.text_field :name, autofocus: true, autocomplete: "name",:class=>"validate",:placeholder=>"Name" %>
      </div>
      <div class="input-field">
        <%= f.email_field :email,autocomplete: "email",:class=>"validate",:placeholder=>"Email" %>
      </div>
      <div class="input-field">
        <%= f.password_field :password,autocomplete: "off",:class=>"validate",:placeholder=>"Password"%>
      </div>
      <button ckass="btn waves-effect waves-light" type=" submit" name="action"> Sign Up</button>
    <% end %>
  </div>
</div>
