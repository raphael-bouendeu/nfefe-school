<h5>List of my Courses </h5>
<div class="row">
  <br/>
  <% if @projects.count > 0 %>
    <% @projects.each do |project| %>
      <%= link_to project do %>
        <div class="col s12 m6 l4">
          <div class="card card-custom">
            <div class="card-image waves-effect waves-block waves-ligh">
              <%= image_tag project.image,class: 'card-image-list' %>
            </div>
            <div class="card-content" style="height: 6em">
              <span class="card-title grey-text text-darken-4">
                <%= project.shortname %>
              </span>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <div class="center">
      <h5>Currently you are not in any projects</h5>
      <%=link_to "Show me all Projects",root_path,class:"btn btn-primary" %>
    </div>
  <% end %>
</div>
